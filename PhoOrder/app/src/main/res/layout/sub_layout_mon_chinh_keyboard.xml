<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/ghichu_keyboard_size_so"
                android:onClick="keyboardReturn"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ghichu_keyboard_margin">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhỏ"
                android:textSize="@dimen/ghichu_keyboard_size_kich_thuoc"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lớn"
                android:textSize="@dimen/ghichu_keyboard_size_kich_thuoc"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặc biệt"
                android:textSize="@dimen/ghichu_keyboard_size_kich_thuoc"
                android:onClick="keyboardReturn"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ghichu_keyboard_margin">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Không hành"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Không tiêu"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Không hành tây"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Không bánh"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ít bánh"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ít nước"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm đầu hành"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm chén tủy"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vắt mì"
                android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
                android:onClick="keyboardReturn"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
            android:onClick="keyboardReturn"/>

        <Button
            android:id="@+id/btnXuongDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="d"
            android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
            android:onClick="keyboardReturn"/>

        <Button
            android:id="@+id/btnDongKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textSize="@dimen/ghichu_keyboard_size_dac_diem"
            android:onClick="keyboardReturn"/>

    </LinearLayout>

</LinearLayout>


